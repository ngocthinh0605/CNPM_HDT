
@{
    ViewData["Title"]="Trang chủ";
    Layout="~/Views/Shared/_Layout.cshtml";
}

<!-- new collection directory -->
	<section class="block no-padding">
					<div class="main-slider overlape">
						<div id="full-slider-wrapper">
							<div id="layerslider" style="width:100%;height:450px; ">
								@foreach (var banner in Model.banner)
								{
									<div class="ls-slide" data-ls="transition3d:all; timeshift:-1000; slidedelay: 7000;">

									<img style="width:1364px;height:446px"  src="~/ImgCuteDogs/@banner.Image" class="ls-bg" alt="Slide background"/>

									<div class="ls-slide" style=" font-size:45px; font-weight:900; top:175px; left:30px; text-transform:uppercase; color:#ffffff;" data-ls="easingin:easeOutBack;  delayin:2000; rotatexin:90; durationin:2000;">@banner.TenLoai</div>

									<div class="ls-slide" style=" font-size:14px; top:230px; left:70px; color:#ffffff;" data-ls="easingin:easeOutExpo; delayin:2500; rotatexin:90; durationin:2000;">@banner.Description</div>

								</div>	
								}
							</div>
						</div>
					</div><!-- Main Slider -->


	</section>
	<section class="block gray no-padding">
		<!-- prefooter -->
		<div class="lookcare-slider-bottom-wrapper">
			<div class="container-fluid">
				<div class="row">
					@foreach (var loaipet in Model.GetIndex4Pet)
					{
						<div class="col-md-3 col-xs-6 helix-product clearfix">
						<div class="img-wrapper">
							<img src="~/ImgCuteDogs/@loaipet.Image" alt="" class="img-responsive">
						</div>
						<div class="product-detail">
							<h2><a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@loaipet.IdLoaiThuCung">@loaipet.TenLoai</a></h2>
							<h4><a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@loaipet.IdLoaiThuCung" class="link-btn">xem ngay<i class="ion-arrow-right-c"></i></a></h4>
						</div>
					</div>
					}
				</div>
			</div>
		</div>
	</section>
	<!-- end new collection directory -->





	<!-- Shop Filter
    ============================================= -->
	<section id="shop" class="shop-4 pt-0">
		<div class="container">
			<div class="row">
				<!-- Projects Filter
                ============================================= -->
				<div class="col-xs-12 col-sm-12 col-md-12 shop-filter">
					<ul class="list-inline">
						<li>
							<a class="active-filter" href="#" data-filter="*">Tất cả sản phẩm</a>
						</li>
						<li>
							<a href="#" data-filter=".filter-best">Bán chạy nhất</a>
						</li>
						<li>
							<a href="#" data-filter=".filter-featured">Sản phẩm nổi bật</a>
						</li>
						<li>
							<a href="#" data-filter=".filter-sale">Giảm giá</a>
						</li>
					</ul>
				</div>
				<!-- .projects-filter end -->
			</div>
			<!-- .row end -->
			<!-- Projects Item
            ============================================= -->
			<div id="shop-all" class="row">
			<!-- Product Item #1 -->
				@foreach (var best in Model.GetBest)
				{
				<div class="col-xs-12 col-sm-6 col-md-3 product-item filter-best">
					<div class="product-img">
									<img src="~/ImgCuteDogs/@best.Image" alt="product" style="width:200px; height:250px">	
					</div>
					<div class="product-bio">
						<h4>
							<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@best.IdLoaiThuCung">@best.TenLoai</a>
						</h4>
						<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@best.IdLoaiThuCung"><p class="product-price">xem ngay</p></a>
					</div>
				</div>
				} 
	

				@foreach (var featured in Model.GetFeatured)
				{
				<div class="col-xs-12 col-sm-6 col-md-3 product-item filter-featured">
					<div class="product-img">
									<img src="~/ImgCuteDogs/@featured.Image" alt="product" style="width:200px; height:250px">	
					</div>
					<div class="product-bio">
						<h4>
							<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@featured.IdLoaiThuCung">@featured.TenLoai</a>
						</h4>
						<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@featured.IdLoaiThuCung"><p class="product-price">xem ngay</p></a>
					</div>
				</div>
				}


				@foreach (var sale in Model.GetSale)
				{
				<div class="col-xs-12 col-sm-6 col-md-3 product-item filter-sale">
					<div class="product-img">
									<img src="~/ImgCuteDogs/@sale.Image" alt="product" style="width:200px; height:250px">	
					</div>
					<div class="product-bio">
						<h4>
							<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@sale.IdLoaiThuCung">@sale.TenLoai</a>
						</h4>
						<a asp-controller="ThuCung" asp-action="Detail" asp-route-id="@sale.IdLoaiThuCung"><p class="product-price">xem ngay</p></a>
					</div>
				</div>
				} 
			</div>
			<!-- .row end -->

			<div class="row">
				<div class="col-xs-12 col-sm-12 col-md-12 text-center">
					<a asp-controller="ThuCung" asp-action="Index" class="btn btn-secondary">Xem thêm <i class="fa fa-plus ml-xs"></i></a>
				</div>
				<!-- .col-md-12 end -->
			</div>
			<!-- .row End -->
		</div>
		<!-- .container end -->
	</section>


	<!-- Start Our Shop Items -->

	<!-- recommend  items Starts -->
	<section id="recent-product">						
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="recent-items">

						<!-- Block heading two -->
						<div class="block-heading-two">
							<h3><span>Sản phẩm đề xuất</span></h3>
						</div>

						<!-- Owl carousel block starts -->
						<!-- Change values of data-items, data-auto-play, data-pagination & data-single-item based on your needs -->
						<div class="owl-carousel" data-items="5" data-auto-play="true" data-pagination="true" data-single-item="false">
							<!-- Carousel item -->
							
							@foreach (var pet in Model.GetThuCungIndex)
							{
								
							<div class="owl-content">
								<!-- Product Item #8 -->
								<div class=" product-item filter-best">
									<div class="product-img">
										@foreach (var loaipet in Model.GetAllLoai)
										{
											@if (@pet.IdLoaiThuCung == @loaipet.IdLoaiThuCung )
													{
														<img src="~/ImgCuteDogs/@loaipet.Image" alt="product">	
													}
										}
										<div class="product-hover">
											<div class="product-cart">
												<a class="btn btn-secondary btn-block" asp-controller="ThuCung" asp-action="AddToCart" asp-route-id="@pet.IdThuCung" type="submit">Thêm giỏ hàng</a>
											</div>
										</div>
									</div>
									<!-- .product-img end -->
									<div class="product-bio">
										<h4>
											<a asp-controller="ThuCung" asp-action="PetDetails" asp-route-id="@pet.IdThuCung">@pet.TenThuCung</a>
										</h4>
										<p class="product-price">@pet.GiaBan VNĐ</p>
									</div>
									<!-- .product-bio end -->

								</div>
							</div>
							}
						</div>

					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- recommend items Ends -->

	<!-- End Our Shop Items -->


	<section class="block parallax-block">
		<div class="layer">
			<div data-velocity="-.3" style="background: url(/ImgCuteDogs/@Model.banner[0].Image) repeat scroll 50% 422.28px transparent;" class="parallax no-repeat"></div><!-- PARALLAX BACKGROUND IMAGE -->
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="lookbook-product">
							<h2><a href="#" title="">Giống nổi bật</a></h2>
							<ul class="simple-cat-style">
								<li><a href="#" title="">Corgi</a></li>
								<li><a href="#" title="">Golden Retriever</a></li>
								<li><a href="#" title="">Bull Anh</a></li>
							</ul>
							<a href="#" title="">Xem thêm</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

    @section scripts
{
<script src="js/vendor/modernizr-2.6.2.min.js"></script>
<!-- All script -->
	<script src="js/vendor/jquery-1.10.2.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/smoothscroll.js"></script>
	<!-- Scroll up js
	============================================ -->
	<script src="js/jquery.scrollUp.js"></script>
	<script src="js/menu.js"></script>


	<script src="js/pluginse209.js?v=1.0.0"></script>

	<!-- Magnific Popup -->
	<script src="js/jquery.magnific-popup.min.js"></script>

	<script src="js/jquery.countdown.min.js"></script>


	<script src="js/jquery.scrolly.js"></script>


	<!-- External libraries: jQuery & GreenSock -->
	<script src="layerslider/js/greensock.js" type="text/javascript"></script>
	<!-- LayerSlider script files -->
	<script src="layerslider/js/layerslider.transitions.js" type="text/javascript"></script>
	<script src="layerslider/js/layerslider.kreaturamedia.jquery.js" type="text/javascript"></script>


	<!-- Owl carousel -->
	<script src="js/owl.carousel.min.js"></script>
	<script src="js/main.js"></script>



	<script type="text/javascript">
		$(document).ready(function() {

			"use strict";

			//** Slider  **//
			jQuery("#layerslider").layerSlider({
				responsive: true,
				responsiveUnder: 1170,
				layersContainer: 1170,
				skin: 'v5',
				hoverPrevNext: true,
				navPrevNext: true,
				navStartStop: false,
				navButtons: false,
				skinsPath: 'layerslider/skins/'
			});


			/*=================== Parallax ===================*/
			$('.parallax').scrolly({bgParallax: true});


			/* Owl carousel */
			$(".owl-carousel").owlCarousel({
				slideSpeed : 500,
				rewindSpeed : 1000,
				mouseDrag : true,
				stopOnHover : true
			});
			/* Own navigation */
			$(".owl-nav-prev").click(function(){
				$(this).parent().next(".owl-carousel").trigger('owl.prev');
			});
			$(".owl-nav-next").click(function(){
				$(this).parent().next(".owl-carousel").trigger('owl.next');
			});


		});
	</script>
}
