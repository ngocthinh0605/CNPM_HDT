<!-- start main content -->
<main class="main-container">
<section class="product_content_area pt-40">
	<!-- start of page content -->

	<div class="lookcare-product-single container">

		<div class="row">

			<div class="main col-xs-12" role="main">

				<div class=" product">

					<div class="row">

						<div class="col-md-5 col-sm-6 summary-before ">

							<div class="product-slider product-shop">
								@* <span class="onsale">Sale!</span> *@
								<ul class="slides">
									
									<li data-thumb="/ImgCuteDogs/@Model.GetThuCungg.Image">
										<a href="~/ImgCuteDogs/@Model.GetThuCungg.Image" data-imagelightbox="gallery" class="hoodie_7_front">
											<img src="~/ImgCuteDogs/@Model.GetThuCungg.Image" class="attachment-shop_single" alt="image">
										</a>
									</li>
									<li data-thumb="/ImgCuteDogs/@Model.GetThuCungg.Image">
										<a href="~/ImgCuteDogs/@Model.GetThuCungg.Image" data-imagelightbox="gallery" class="hoodie_7_back">
											<img src="~/ImgCuteDogs/@Model.GetThuCungg.Image" class="attachment-shop_single" alt="image">
										</a>
									</li>
								</ul>
							</div>
						</div>

						<div class="col-sm-6 col-md-7 product-review entry-summary">

							<h1 class="product_title">@Model.GetThuCungg.TenThuCung</h1>

							<div class="woocommerce-product-rating">
								<div class="star-rating" title="Rated 4.00 out of 5">
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star-o"></i>
								</div>
								<a href="#reviews" class="woocommerce-review-link">(<span class="count">3</span> customer reviews)</a>
							</div>

							<div>
								<p class="price">
									<ins><span class="amount">@Model.GetThuCungg.GiaBan</span></ins> VNĐ</p>
							</div>
						
							@foreach (var loai in Model.GetAllLoai)
							{
							@if(@loai.IdLoaiThuCung  == @Model.GetThuCungg.IdLoaiThuCung)
							{
							<p>@loai.TapTinh</p>
							}
							}

		
								@using(Html.BeginForm("AddToCart","ThuCung", new { @class ="variations_form cart"}))
							{
								

								<button class="btn btn-info mt-2"  asp-action="AddToCart" asp-route-id="@Model.GetThuCungg.IdThuCung" type="submit" class="cart-button">Thêm vào giỏ</button>

							}
							<div class="product_meta">



								<span class="sku_wrapper">SKU: <span class="sku">N/A</span>.</span>


							</div>

							<div class="share-social-icons">

								<a href="#" target="_blank" title="Share on Facebook">
									<i class="fa fa-facebook"></i>
								</a>
								<a href="#" target="_blank" title="Share on Twitter">
									<i class="fa fa-twitter"></i>
								</a>
								<a href="#" target="_blank" title="Pin on Pinterest">
									<i class="fa fa-pinterest"></i>
								</a>
								<a href="#" target="_blank" title="Share on Google+">
									<i class="fa fa-google-plus"></i>
								</a>
							</div>

						</div>
						<!-- .summary -->

					</div>

					<div class="wrapper-description">

						<ul class="tabs-nav clearfix">
							@foreach (var loai in Model.GetAllLoai)
							{
							@if(@loai.IdLoaiThuCung  == @Model.GetThuCungg.IdLoaiThuCung)
							{
							<li class="active">Đặc điểm của giống @loai.TenLoai</li>
							}
							}
							<li>Tuổi thọ</li>
							<li>Cách nuôi</li>
						</ul>
						<div class="tabs-container product-comments">

							<div class="tab-content">
								<section class="related-products">

									<h2>Đặc điểm</h2>

									@foreach (var loai in Model.GetAllLoai)
									{
									@if(@loai.IdLoaiThuCung  == @Model.GetThuCungg.IdLoaiThuCung)
									{
									<p>@loai.NgoaiHinh</p>
									}
									}
								</section>
							</div>



							<div class="tab-content">
								<div class="panel entry-content">

									<h2>Tuổi thọ</h2>

									@foreach (var loai in Model.GetAllLoai)
									{
									@if(@loai.IdLoaiThuCung  == @Model.GetThuCungg.IdLoaiThuCung)
									{
									<p>@loai.TuoiTho</p>
									}
									}
								</div>
							</div>
							<div class="tab-content">
								<div class="panel entry-content">

									<h2>Cách nuôi</h2>

									@foreach (var loai in Model.GetAllLoai)
									{
									@if(@loai.IdLoaiThuCung  == @Model.GetThuCungg.IdLoaiThuCung)
									{
									<p>@loai.CachNuoi</p>
									}
									}
								</div>
							</div>

						</div>

					</div>
					




				</div>
