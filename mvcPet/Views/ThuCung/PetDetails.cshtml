												{
													@if(@thucung.IdLoaiThuCung == Model.GetThuCungg.IdLoaiThuCung && @thucung.IdThuCung != Model.GetThuCungg.IdThuCung )
													{
														<div class="product  item first ">

														<article>


															<figure>
												
																	<a href="" data-imagelightbox="gallery" class="hoodie_7_front">
																		<img src="~/ImgCuteDogs/@Model.GetThuCungg.Image" class="attachment-shop_single" alt="image">
																	</a>
												
																<figcaption><span class="amount">@thucung.GiaBan VNĐ</span></figcaption>
															</figure>

